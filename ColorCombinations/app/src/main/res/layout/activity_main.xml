<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    tools:context="com.dbondarenko.shpp.colorcombinations.MainActivity">

    <fragment
        android:id="@+id/fragmentTopLeft"
        android:name="com.dbondarenko.shpp.colorcombinations.TopLeftColorRectangleFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintBottom_toTopOf="@+id/fragmentBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fragmentTopRight"
        app:layout_constraintTop_toTopOf="parent"/>

    <fragment
        android:id="@+id/fragmentTopRight"
        android:name="com.dbondarenko.shpp.colorcombinations.TopRightColorRectangleFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentTopLeft"
        app:layout_constraintLeft_toRightOf="@+id/fragmentTopLeft"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragmentTopLeft"/>

    <fragment
        android:id="@+id/fragmentBottom"
        android:name="com.dbondarenko.shpp.colorcombinations.BottomColorRectangleFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentTopLeft"/>

</android.support.constraint.ConstraintLayout>